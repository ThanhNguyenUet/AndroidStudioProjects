<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInteraction"
    android:orientation="vertical"
    android:gravity="center"
    android:id = "@+id/linearInteraction">
    <Button
        android:id="@+id/toastMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toast Message"/>

    <Button
        android:id="@+id/snackbarMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Snackbar Message"/>

    <TextView
        android:id="@+id/interactText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Text of TextView"
        />
    <Button
        android:id="@+id/dialogMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dialog Message"/>
</LinearLayout>